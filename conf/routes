# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /device                     controllers.Application.addDevice()
GET     /devices                    controllers.Application.getDevices
POST    /devices/:id/delete         controllers.Application.deleteDevice(id: Long)
POST    /devices/:id/send           controllers.Application.sendPacket(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
